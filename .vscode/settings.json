{
  "files.eol": "\n",
  "css.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.validate": true,
  "tailwindCSS.experimental.classRegex": [
    // "classNames\\(\"(.*)\"\\)",
    "[cC]lasses\\s*=\\s*\"([^\"]*)\"",
    ".+[cC]lassName\\s*=\\s*\"([^\"]*)\"",
    "const\\s+.*[cC]lassName\\s*=\\s*\"([^']*)\""
  ],
  "tailwindCSS.lint.cssConflict": "ignore",
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true
  }
}
