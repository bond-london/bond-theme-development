{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "version": "independent",
  "packages": ["packages/*", "test-site"],
  "command": {
    "publish": {
      "allowBranch": "main",
      "bump": "patch",
      "conventionalCommits": true,
      "changelog": false,
      "message": "chore(release): Publish",
      "private": false
    }
  }
}
