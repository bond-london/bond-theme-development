{
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "yarn run format:code",
    "format:code": "yarn run lint:code --fix",
    "lint:code": "eslint --ext .js,.jsx,.ts,.tsx --quiet packages",
    "lerna": "lerna",
    "build": "lerna run build",
    "watch": "lerna run watch",
    "build:packages": "lerna run --scope \"@bond-london/gatsby-theme\" --include-dependencies build --stream --concurrency=0",
    "watch:packages": "lerna run --scope \"@bond-london/gatsby-theme\" --include-dependencies watch --no-sort --stream --concurrency=999",
    "nx": "nx"
  },
  "workspaces": [
    "packages/*",
    "test-site"
  ],
  "name": "bond-theme-development",
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.10.7",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "lerna": "^5.4.3",
    "nx": "14.5.10",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "gatsby-plugin-eslint": "^4.0.2",
    "gatsby-plugin-image": "^2.21.0",
    "gatsby-plugin-postcss": "^5.21.0",
    "gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.27"
  }
}
