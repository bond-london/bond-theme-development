{
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "yarn run format:code",
    "format:code": "yarn run lint:code --fix",
    "lint:code": "eslint --ext .js,.jsx,.ts,.tsx --quiet packages",
    "lerna": "lerna",
    "build": "lerna run build  --stream --concurrency=0",
    "watch": "lerna run watch --no-sort --stream --concurrency=999",
    "build:packages": "lerna run --scope \"@bond-london/gatsby-theme\" --include-dependencies build --stream --concurrency=0",
    "watch:packages": "lerna run --scope \"@bond-london/gatsby-theme\" --include-dependencies watch --no-sort --stream --concurrency=999",
    "nx": "nx",
    "prerelease": "lerna version prerelease",
    "publish:packages": "lerna publish from-package"
  },
  "workspaces": [
    "packages/*",
    "test-site"
  ],
  "name": "bond-theme-development",
  "devDependencies": {
    "@types/react": "^18.0.18",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "eslint": "^8.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.4",
    "lerna": "^5.4.3",
    "nx": "14.7.13",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
