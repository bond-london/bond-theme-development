{
  "name": "@bond-london/bond-tailwind-plugin",
  "sideEffects": false,
  "version": "2.0.0-pre.1",
  "description": "Tailwind configuration for Bond",
  "author": "Nick Randell <nick.randell@bond.fi>",
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "keywords": [
    "bond",
    "tailwind"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "custom.d.ts"
  ],
  "repository": {
    "url": "https://github.com/bond-london/bond-london-theme",
    "directory": "packages/bond-tailwind-plugin"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build:all": "babel src --out-dir dist --extensions \".ts,.tsx\"",
    "build": "npm-run-all -s clean build:all",
    "watch": "npm-run-all -s clean watch:all",
    "watch:all": "yarn build:all -w",
    "prepare": "cross-env NODE_ENV=production yarn run build",
    "clean": "del-cli dist/*"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "babel-preset-gatsby-package": "^2.21.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "tailwindcss": "^3.0.13"
  }
}
