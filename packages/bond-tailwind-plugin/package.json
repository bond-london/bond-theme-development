{
  "name": "@bond-london/bond-tailwind-plugin",
  "sideEffects": false,
  "version": "3.0.2",
  "description": "Tailwind configuration for Bond",
  "author": "Nick Randell <nick.randell@bond.fi>",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": [
    "bond",
    "tailwind"
  ],
  "repository": {
    "url": "https://github.com/bond-london/bond-london-theme",
    "directory": "packages/bond-tailwind-plugin"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:tsc": "tsc --outDir dist/",
    "build": "npm-run-all -s clean build:*",
    "watch": "npm-run-all -s watch:*",
    "watch:tsc": "yarn build:tsc -w",
    "prepare": "cross-env NODE_ENV=production yarn run build",
    "clean": "del-cli dist/*"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "tailwindcss": "^3.1.8"
  },
  "gitHead": "5c1e8033f5b218b11ccfec5b579df6b6a657449e"
}
