{
  "name": "@bond-london/gatsby-transformer-video",
  "version": "2.0.0-pre.2",
  "description": "Transform video files",
  "author": "Nick Randell <nick.randell@bond.fi>",
  "license": "MIT",
  "keywords": [
    "gatsby",
    "gatsby-plugin"
  ],
  "repository": {
    "url": "https://github.com/bond-london/bond-london-theme",
    "directory": "packages/bond-transformer-video"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "gatsby-node.js",
    "gatsby-worker.js",
    "gatsby-ssr.tsx",
    "dist"
  ],
  "scripts": {
    "build:tsc": "tsc --outDir dist/",
    "build": "npm-run-all -s clean build:tsc",
    "watch": "npm-run-all -s watch:tsc",
    "watch:tsc": "yarn build:tsc -w",
    "prepare": "cross-env NODE_ENV=production yarn run build",
    "clean": "del-cli dist/*"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.11.0",
    "ffmpeg-static": "^5.0.2",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "sharp": "^0.30.7"
  },
  "peerDependencies": {
    "gatsby": "^4.x",
    "gatsby-cli": "^4.x",
    "gatsby-source-filesystem": "^4.x",
    "gatsby-worker": "^1.19.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.1",
    "@types/ffprobe-static": "^2.0.1",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/fs-extra": "^9.0.13",
    "@types/react": "^18.0.15",
    "@types/sharp": "^0.30.5",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  }
}
