{
  "name": "@bond-london/simple-gatsby-source-graphcms",
  "sideEffects": false,
  "version": "8.2.0",
  "description": "Bond version of the official Gatsby source plugin for GraphCMS projects",
  "author": "Nick Randell <nick.randell@bond.fi>",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": [
    "data",
    "gatsby",
    "gatsby-plugin",
    "graphcms",
    "graphql",
    "source"
  ],
  "repository": {
    "url": "https://github.com/bond-london/bond-london-theme",
    "directory": "packages/bond-source-graphcms"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "src/index.ts",
  "files": [
    "dist",
    "gatsby-node.js"
  ],
  "scripts": {
    "build:tsc": "tsc --outDir dist/",
    "build": "npm-run-all -s clean build:*",
    "watch": "npm-run-all -s watch:*",
    "watch:tsc": "yarn build:tsc -w",
    "prepare": "cross-env NODE_ENV=production yarn run build",
    "clean": "del-cli dist/*"
  },
  "dependencies": {
    "@graphcms/rich-text-types": "^0.5.0",
    "@nrandell/gatsby-graphql-source-toolkit": "^3.0.0-alpha.2",
    "async-sema": "^3.1.1",
    "fs-extra": "^11.1.0",
    "node-fetch": "2",
    "p-throttle": "4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "gatsby": "^4 || ^5",
    "gatsby-plugin-utils": "^3 || ^4",
    "gatsby-source-filesystem": "^4 || ^5"
  },
  "gitHead": "5c1e8033f5b218b11ccfec5b579df6b6a657449e"
}
