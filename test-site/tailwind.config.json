{
  "colorOptions": {
    "Black": "#0f0f0f",
    "Blue": "#0f0ff0",
    "Green": "#0ff00f",
    "Red": "#f00f0f",
    "White": "#f0f0f0",
    "Grey": "#e0e0e0"
  },
  "colorFile": "./colors.ts",
  "colorOpposites": {
    "Black": "White",
    "Grey": "Blue",
    "Red": "Green"
  },
  "spacing": {
    "section": 32,
    "xxxs": 8,
    "xxs": 10,
    "xs": 16,
    "s": 32,
    "m": 48,
    "l": 96,
    "xl": 192,
    "menu": 300
  },
  "sizes": {
    "mobile": {
      "margin": 20,
      "gap": 15,
      "cols": 4
    },
    "tablet": {
      "breakpoint": 768,
      "margin": 45,
      "cols": 8
    },
    "laptop": {
      "breakpoint": 1024,
      "margin": 75,
      "cols": 12
    },
    "desktop": {
      "breakpoint": 1440
    },
    "4k": {
      "breakpoint": 1920
    }
  },
  "lineHeight": 1.25,
  "fontTable": {
    "h1": {
      "font": "sans",
      "weight": "bold",
      "default": "36/124",
      "desktop": "56/200",
      "4k": "64/130"
    },
    "h2": {
      "weight": "bold",
      "default": "28/124/serif",
      "desktop": "40/120/serif",
      "4k": "48/130/sans"
    },
    "h3": { "font": "serif", "weight": "bold", "default": 18, "desktop": 36 },
    "h4": { "font": "serif", "weight": "bold", "default": 16, "desktop": 20 },
    "p1": {
      "font": "sans",
      "weight": "bold",
      "default": 20,
      "desktop": 24,
      "4k": 28
