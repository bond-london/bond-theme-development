    "p2": {
      "font": "sans",
      "weight": "light",
      "default": 16,
      "desktop": 20
    },
    "p3": { "font": "sans", "weight": "bold", "default": 16, "desktop": 20 },
    "p4": {
      "font": "sans",
      "weight": "light",
      "default": 12,
      "tablet": 14,
      "desktop": 16
    },
    "mono": {
      "font": "monospace",
      "weight": "400",
      "default": 16,
      "tablet": 20,
      "desktop": 24
    }
  }
}
